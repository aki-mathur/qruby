<div class="container">
  <div class="jumbotron">
    <h1> QR Code Generator/Reader</h1>
  </div>
  <div class="row" ng-controller="DashboardCtrl">
    <div class="col-md-6">
      <h2>Generate QR Code</h2>
      <form>
        <div class="form-group">
          <label for="email">Enter text:</label>
          <input type="text" class="form-control" id="text" ng-model="codeText">
        </div>
        <button ng-click="generateCode()" class="btn btn-primary">Generate</button>
      </form>
      <div class="alert alert-danger" ng-show="errorMessage" style="margin-top: 10px">
        <strong>Error: </strong> {{errorMessage}}
      </div>
      <div style="margin-top: 10px" ng-show="qrcode">
        <div class="alert alert-success" >Successfully generated QR code</div>
        <img data-ng-src="data:image/png;base64,{{qrcode}}"  />
      </div>
    </div>
    <div class="col-md-6">
      <h2>Scan QR code</h2>
      <form>
        <div class="form-group">
          <label for="fileUpload">Upload File</label>
          <input type="file"  id="fileUpload" file-model="file">
          <button ng-click="uploadCode()" class="btn btn-primary">Scan </button>
        </div>
      </form>
      <div class="alert alert-success" ng-show="result">
        <strong>Scan Result: </strong> {{result}}
      </div>
      <div class="alert alert-danger" ng-show="errors">
        <strong>Error: </strong> {{errors}}
      </div>
    </div>
  </div>
</div>
